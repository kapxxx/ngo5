@model IEnumerable<NGO3.Models.Fund>

@{
    ViewBag.Title = "MydonatonFund";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <h2>My Donaton Funds</h2>
    <br />
    <table class="table">
        <tr>
            <th>
                <h3><b>Donation Name</b></h3>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserData.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonationMoney)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Donation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserData.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonationMoney)
                </td>

            </tr>
        }
</div>

</table>
